@model dotnetTest.Models.ProjectInfo

@{
    ViewData["Title"] = "Create Project";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Create</title>
    <link rel="stylesheet" href="Create.cshtml.css" />
    
</head>

<h2>Create a New Project</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProjectName" class="control-label"></label>
        <input asp-for="ProjectName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProjectManagerName" class="control-label"></label>
        <input asp-for="ProjectManagerName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProjectDescription" class="control-label"></label>
        <textarea asp-for="ProjectDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ProjectDueDate" class="control-label"></label>
        <input asp-for="ProjectDueDate" class="form-control" type="date"></input>
    </div>

